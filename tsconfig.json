{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/stores/WordleStore.jsx",
    "src/stores/QuordleStore.jsx",
    "src/stores/SpellingBeeStore.jsx",
    "src/pages/chat/chat.js"
  ],
  "types": ["cypress", "cypress-axe", "node"],
  "exclude": ["node_modules", ".next"]
}
